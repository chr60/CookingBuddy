<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:text="@string/userName"
        android:textSize="50px"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginBottom="20dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:text="Chicken and rice"
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:id="@+id/button26"/>

            <Button
                android:text="Pork and rice"
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:id="@+id/button27"/>

            <Button
                android:text="Beef and rice"
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:id="@+id/button28"/>

            <Button
                android:text="Fish and Rice"
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:id="@+id/button29"/>

            <Button
                android:text="Steak and Rice"
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:id="@+id/button30"/>

            <Button
                android:text="Rice and rice"
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:id="@+id/button31"/>


            <Button
                android:text="Turkey Sandwhich"
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:id="@+id/button32"/>

            <Button
                android:text="Ham and Cheese Sandwhich"
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:id="@+id/button33"/>

            <Button
                android:text="Sushi and rice"
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:id="@+id/button34"/>

            <Button
                android:text="Hot Dog"
                android:layout_gravity="center"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:id="@+id/button35"/>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>



</LinearLayout>
